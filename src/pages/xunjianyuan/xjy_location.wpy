<style lang="less" scoped>
.container {
  display: flex;
  flex-direction: column;

  .location-info {
    font-size: 30rpx;
    color: #414141;
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .input {
    width: 80%;
  }

  .textarea {
    width: 90%;
    background-color: white;
    border: 2rpx solid #f1f1f1;
    margin-left: 20rpx;
    margin-right: 20rpx;
    padding: 10rpx;
    color: #515151;
    font-size: 30rpx;
  }

  .btn-submit {
    width: 60%;
    background-color: #ffde30;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    color: #414141;
  }

  .line {
    border: 1rpx solid #f1f1f1;
    margin-left: 20rpx;
  }

  .btn-submit:active {
    background-color: rgb(253, 232, 124);
  }

  .btn-submit:after {
    border: none;
  }
}
</style>
<template>
    <view class="container">
        <view style="padding:20rpx;background-color: white;">
            <view class="location-info">
                <text style="color:#717171;width:150rpx;">当前区域:</text>
                <text wx:if="{{currentArea}}">{{currentArea.title}}</text>
                <text wx:elif="{{queryArea}}">{{queryArea.title}}</text>
            </view>
            <view class="location-info" style="margin-top:10rpx;">
                <text style="color:#717171;width:150rpx;">区块编号:</text>
                <text wx:if="{{currentArea}}">{{currentArea.num}}</text>
                <text wx:elif="{{queryArea}}">{{queryArea.num}}</text>
            </view>
            <view class="location-info" style="margin-top:10rpx;">
                <text style="color:#717171;width:120rpx;">负责人:</text>
                <text>
                    <block wx:for="{{currentPerson}}" wx:key="{{index}}">{{item.name}}、</block>
                </text>
            </view>
        </view>
        <view wx:if="{{!queryArea}}" style="font-size:30rpx;color:#2FBDF5;text-align:right;padding:10rpx 20rpx 10rpx 20rpx;" @tap="onAreaChooseOpen">选择区域?</view>
        
        <view style="background-color:white;padding:20rpx 20rpx 20rpx 20rpx;margin-top:10rpx;display:flex;flex-direction:row;align-items:center;font-size:30rpx;">
            <text style="color:#717171;width:150rpx;">巡检标题:</text>
            <input class="input" placeholder="请输入标题" placeholder-style="color:#919191" @input="onInput" data-type="title"/>
        </view>
        <view class="line"></view>
        <view style="background-color:white;padding:20rpx 20rpx 20rpx 20rpx;display:flex;flex-direction:row;align-items:center;font-size:30rpx;">
            <text style="color:#717171;width:150rpx;">巡检类型:</text>
            <picker style="color:#515151;font-size:30rpx;width:80%" bindchange="onPickerChange" value="{{index}}" range-key="name" range="{{checkType}}">
                <view style="" wx:if="{{checkIndex}}">{{checkType[checkIndex].name}}</view>
                <view style="" wx:else>请选择巡检类型</view>
            </picker>
            <image src="../../images/next.png" class="icon-48"></image>
        </view>

        <view style="font-size:30rpx;color:#414141;text-align:left;padding:20rpx;">图片信息</view>
        <imagePicker @onItemClick.user="onPicItemClick" @onImageChoose.user="onPicChoose"></imagePicker>

        <view style="font-size:30rpx;color:#414141;text-align:left;padding:20rpx;">问题描述</view>
        <textarea class="textarea" placeholder="请详述问题/状况" style="height:200rpx;" @input="onInput" data-type="question">

        </textarea>

        <view style="font-size:30rpx;color:#414141;text-align:left;padding:20rpx;">处罚建议</view>
        <textarea class="textarea" placeholder="请输入处罚建议" style="height:100rpx;" @input="onInput" data-type="advise">

        </textarea>

        <areaSelector :show.sync="showAreaPicker" @on-close.user="onAreaClose" @onAreaChoose.user="onAreaChoose"></areaSelector>

        <button class="btn-submit" @tap="onSave">提交</button>
        
    </view>
</template>
<script>
import wepy from 'wepy';
import { UploadMulti } from '../../utils/uploader';
import {
  getReportType,
  getLocationArea,
  getAreaLeader,
  addInsReport,
  getAreaById
} from '../../utils/api';
import ImagePicker from '../../components/imagePicker';
import AreaSelector from '../../components/areaSelector';
const chooseLocation = requirePlugin('chooseLocation');
export default class XJYLocation extends wepy.page {
  config = {
    navigationBarTitleText: '巡检报告',
    navigationBarBackgroundColor: '#FFDE30',
    navigationBarTextStyle: 'black',
    disableScroll: false,
    usingComponents: {}
  };

  data = {
    showAreaPicker: false,
    one: null,
    two: null,
    currentArea: null,
    currentPerson: null,
    checkType: null,
    checkIndex: null,
    images: null,
    //business variable
    showBig: false,
    currenUrl: null,

    //upload variable
    title: null, //标题
    question: null, //内容
    advise: null, //处罚建议

    queryArea: null
  };

  components = {
    imagePicker: ImagePicker,
    areaSelector: AreaSelector
  };

  methods = {
    onAreaClose() {
      this.showAreaPicker = false;
    },
    async onAreaChoose(one, two, three) {
      //console.log(one,two,three)
      this.one = one;
      this.two = two;
      this.currentArea = three;
      if (!three) {
        this.currentPerson = [];
        wx.showToast({
          title: '请选择三级区域',
          icon: 'none'
        });
        return;
      }

      // load area leader info
      let res = await getAreaLeader(three.id);
      this.currentPerson = res.info.chaUser;
      this.$apply();
      //console.log(res)
    },
    onAreaChooseOpen(e) {
      this.showAreaPicker = true;
    },
    onPickerChange(e) {
      //console.log(e)
      this.checkIndex = e.detail.value;
      this.$apply();
    },
    onPicItemClick(e) {},
    onPicChoose(e) {
      console.log(e);
      this.images = e;
    },
    onInput(e) {
      switch (e.currentTarget.dataset.type) {
        case 'title':
          this.title = e.detail.value;
          break;
        case 'question':
          this.question = e.detail.value;
          break;
        case 'advise':
          this.advise = e.detail.value;
          break;
      }
    },
    onSave() {
      if (!this.title) {
        wx.showToast({
          title: '标题为空',
          icon: 'none'
        });
        return;
      }

      if (!this.question) {
        wx.showToast({
          title: '问题描述为空',
          icon: 'none'
        });
        return;
      }

      if (!this.advise) {
        wx.showToast({
          title: '处罚建议为空',
          icon: 'none'
        });
        return;
      }

      if (!this.checkIndex) {
        wx.showToast({
          title: '巡检类型为空',
          icon: 'none'
        });
        return;
      }

      if (!this.currentArea && !this.queryArea) {
        wx.showToast({
          title: '区域为空',
          icon: 'none'
        });
        return;
      }

      if (!this.images || this.images.length <= 0) {
        wx.showToast({
          title: '现场图片为空',
          icon: 'none'
        });
        return;
      }

      let self = this;
      UploadMulti(
        this.images,
        async res => {
          let result = res.filter(e => {
            //console.log(e);
            return e.indexOf('null') <= 0;
          });
          let user = wx.getStorageSync('login_user_info');
          let repos = await addInsReport(
            user.id,
            self.title,
            self.question,
            result.join(';'),
            self.advise,
            self.currentArea ? self.currentArea.id : self.queryArea.id,
            self.currentArea
              ? self.currentArea.regionOneId
              : self.queryArea.regionOneId,
            self.currentArea
              ? self.currentArea.regionTwoId
              : self.queryArea.regionTwoId,
            self.checkType[self.checkIndex].id
          );
          if (repos.status === 1) {
            wx.showToast({
              title: '提交成功',
              icon: 'none'
            });
            setTimeout(() => {
              wx.navigateBack();
            }, 500);
          }
        },
        e => {
          console.log(e);
        }
      );
    }
  };

  async onLoad(query) {
    if (query.code) {
      let res = await getAreaById(query.code);
      if (res.status !== 1 || !res.info.id) {
        wx.showToast({
          title: '区域查询失败',
          icon: 'none'
        });
      } else {
        this.queryArea = res.info;
        this.$apply();
        res = await getAreaLeader(res.info.id);
        if (res.status === 1) {
          this.currentPerson = res.info.chaUser;
        }
        this.$apply();
      }
    } else {
      //地图选点巡检
      let referer = '西武商城';
      let key = 'S2ZBZ-LGO6F-4OTJB-NQOWC-PS7XS-Q7BLZ';
      wx.navigateTo({
        url: 'plugin://chooseLocation/index?key=' + key + '&referer=' + referer
      });
    }

    // get report type
    let res = await getReportType();
    this.checkType = res.info;
    this.$apply();
  }

  onReady() {}

  async onShow() {
    const lc = chooseLocation.getLocation();
    if (!lc || !lc.latitude) return;
    //console.log(lc);
    let res = await getLocationArea(lc.latitude, lc.longitude);
    console.log(res);
    if (res.status === 1) {
      //查询成功
    }
  }
}
</script>
